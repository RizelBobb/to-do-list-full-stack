<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>To Do List</title>

  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
  <link href="https://fonts.googleapis.com/css?family=Berkshire+Swash|Open+Sans" rel="stylesheet">
</head>
  <body>
    <div id="container">
    <section id="main">
      <h1>To Do List</h1>

      <form action="/quotes" method="POST" id="formToDo" class="form-add-todo">

        <input type="text" id="new-todo-item" class="new-todo-item" name="quote" placeholder="Add Task . . ." />
        <button type="submit" id="add-todo-item" class="add-todo-item">+</button>

      </form>



      <ul class="messages">
      <% for(var i=0; i<messages.length; i++) {%>
        <li  class="message">
          <span  ><%= messages[i].quote %></span>
          <span><%= messages[i].thumbUp %></span>
          <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
        </li>
      <% } %>
      </ul>


    </section>

    </div>


    <script src="main.js"></script>

  </body>
</html>
